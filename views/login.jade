extends layout

block content
    .container.col-lg-4.col-lg-offset-4
     h2.page-header Login
     p Please login below
    
     form(method="post", action='/users/login')
        
        
        .form-group
         label Username
         input.form-control(name='username',
         type='text',
         placeholder='Enter username')
        .form-group
         label Password
         input.form-control(name='password',
         type='password',
         placeholder='Enter Password')
        
        input.btn.btn-success.col-lg-12(type='submit',name='Submit',value='Login')
